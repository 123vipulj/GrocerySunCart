<?xml version="1.0" encoding="utf-8"?> <androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/navigation_drawer"
            android:src="@drawable/navlist"
            android:layout_alignParentStart="true"
            android:layout_width="25dp"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cart_icons"
                android:src="@drawable/cart"
                android:layout_width="25dp"
                android:layout_centerVertical="true"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/total_cart"
                android:layout_gravity="bottom"
                android:textColor="#fff"
                android:text="0"
                android:textSize="11sp"
                android:layout_toEndOf="@id/cart_icons"
                android:paddingBottom="4dp"
                android:layout_marginTop="3dp"
                android:gravity="center|center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/round_total_add"
                android:layout_width="15dp"
                android:layout_height="16dp"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>